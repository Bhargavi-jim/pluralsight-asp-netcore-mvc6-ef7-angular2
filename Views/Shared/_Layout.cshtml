<!DOCTYPE html>
<html>
    <head>
        <title>The World - @ViewBag.Title</title>
        <meta charset="utf-8" />
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
            <link rel="stylesheet" href="~/lib/bootswatch/readable/bootstrap.min.css" />
            <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
            <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>
        <div class="sidebar">
            @if(User.Identity.IsAuthenticated)
            {
                <img src='@Url.Content("~/images/ryu_h.jpg")' alt="ryu" class="headshot"/>
                <span id="username">@User.Identity.Name</span>
            }
            <!--<span id="username">Ryu</span>-->
            <ul class="nav">
                <li class="active"><a asp-controller="App" asp-action="Index">Index</a></li>                
                <li><a asp-controller="App" asp-action="About">About</a></li>
                <li><a asp-controller="App" asp-action="Particle">Particle</a></li>
                <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
                
                @if(User.Identity.IsAuthenticated)
                {
                    <li><a asp-controller="App" asp-action="Trips">Trips</a></li>
                    <li><a asp-controller="Auth" asp-action="Logout">Logout</a></li>
                }                
            </ul>
        </div>
            
        <div class="wrapper">
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <!--<ul class="nav navbar-nav navbar-left">
                        <li>
                            <button id="sidebarToggle" class="btn btn-primary">
                                <i class="fa fa-angle-left"></i>
                            </button>
                        </li>
                    </ul>-->
                    <a asp-controller="App" asp-action="Index" class="navbar-brand">My World</a>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a asp-controller="Auth" asp-action="Login" class="btn btn-sm btn-info">
                                <i class="fa fa-sign-in"></i> Login
                            </a>
                        </li>
                        <!--<li>
                            <a href="#" class="btn btn-sm btn-info">
                                <i class="fa fa-save"></i>Save
                            </a>
                        </li>
                        <li>
                            <a href="#" class="btn btn-sm btn-info">
                                <i class="fa fa-print"></i>Print
                            </a>
                        </li>-->
                    </ul>
                </div>
            </nav>
            <div class="container-fluid">                
                <div>
                    @RenderBody()   <!-- Inject contents of main view here -->
                </div>
                <script src="~/lib/jquery/dist/jquery.js"></script>
                <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>            
            </div>
            
            @RenderSection("Scripts", required: false)  <!-- Inject scripts where needed, used with atSection -->
            <div class="footer container-fluid">
                <div class="navbar navbar-inverse navbar-fixed-bottom">
                    <h4 class="text-info text-center">&copy; 2016 My World</h4>
                </div>                
            </div>
        </div>
    </body>
</html>

